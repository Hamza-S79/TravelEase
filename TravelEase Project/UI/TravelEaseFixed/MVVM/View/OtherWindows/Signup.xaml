<Window x:Class="TravelEaseFixed.MVVM.View.OtherWindows.Signup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelEaseFixed.MVVM.View.OtherWindows"
        mc:Ignorable="d"
        Title="Signup" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side (Sign Form)-->
        <Grid Grid.Column="0" Background="Linen" >
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <TextBlock 
                Grid.Row="2"
                HorizontalAlignment="Center" FontSize="11" Foreground="Gray">
                <Run Text="Already have an account? " />
                <Span Cursor="Hand">
                    <Span.Style>
                        <Style TargetType="Span">
                            <Setter Property="Foreground" Value="Gray"/> <!-- Ensure Value is set here -->
                            <Setter Property="TextDecorations" Value="Underline"/> <!-- Ensure Value is set here -->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Black"/> <!-- Value specified here as well -->
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Span.Style>
                    <Run Text="Login" MouseLeftButtonUp="goLogin"/>
                </Span>
            </TextBlock>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="20*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.2*"/>
                        <!-- Title -->
                        <RowDefinition Height="0.5*"/>
                        <!-- From Type -->
                        <RowDefinition Height="8*"/>
                        <!-- MVVM may be or the form -->
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Sign Up"
                               FontSize="30" FontWeight="Bold"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="#333"/>

                    <!-- Buttons with Command Binding and Color Binding -->
                    <Grid Grid.Row="1"  >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <RadioButton Grid.Column="0" Style="{StaticResource MajorRadioButton}" Margin = "10,0,10,0" Content = "Traveller" GroupName="Form" IsChecked="True"/>
                        <RadioButton Grid.Column="1" Style="{StaticResource MajorRadioButton}" Margin = "10,0,10,0" Content = "Operator" GroupName="Form"/>
                        <RadioButton Grid.Column="2" Style="{StaticResource MajorRadioButton}" Margin = "10,0,10,0" Content = "Hotel" GroupName="Form"/>


                    </Grid>

                    <Grid Grid.Row="2" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="1">
                            <Frame x:Name="SignUpForms"
                                   NavigationUIVisibility="Hidden"/>
                        </Grid>
                    </Grid>


                </Grid>
            </Grid>
        </Grid>

        <!-- Right Side -->
        <Grid Grid.Column="1" Background="#4A6154" />
    </Grid>
</Window>
