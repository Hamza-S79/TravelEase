<Page x:Class="TravelEaseFixed.MVVM.View.OtherWindows.TravellerForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelEaseFixed.MVVM.View.OtherWindows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TravellerForm">

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.61*" />
            <RowDefinition Height="1.61*" />
            <RowDefinition Height="1.61*" />
            <RowDefinition Height="1.61*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
           
        </Grid.RowDefinitions>

        <!-- First Name and Last Name -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- First Name -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label VerticalAlignment="Bottom" Grid.Row="0" Content="First Name" FontSize="11" FontWeight="Bold" />
                    <TextBox Grid.Row ="2" 
                             x:Name="F_name"
                             Style="{StaticResource RoundedTextBox}"/>
                </Grid>
            </Grid>

            <!-- Last Name -->
            <Grid Grid.Column="2" Margin="0,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label VerticalAlignment="Bottom" Content="Last Name" FontSize="11" FontWeight="Bold" />
                    <TextBox Grid.Row ="2"
                             x:Name="L_name"
                             Style="{StaticResource RoundedTextBox}" FocusVisualStyle="{x:Null}"/>
                </Grid>
            </Grid>
        </Grid>

        <!-- Email and Password -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Email -->
            <Grid Grid.Column="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label VerticalAlignment="Bottom" Content="Email" FontSize="11" FontWeight="Bold" />
                    <TextBox Grid.Row ="2"
                             x:Name="Email"
                             Style="{StaticResource RoundedTextBox}"/>
                </Grid>
            </Grid>

            <!-- Password -->
            <Grid Grid.Column="2" Margin="0,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label VerticalAlignment="Bottom" Content="Password" FontSize="11" FontWeight="Bold" />
                    <TextBox Grid.Row ="2"
                             x:Name="Password"
                             Style="{StaticResource RoundedTextBox}"/>
                </Grid>
            </Grid>
        </Grid>

        <!-- Nationality and Age -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Nationality -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label VerticalAlignment="Bottom" Content="Nationality" FontSize="11" FontWeight="Bold" />
                    <TextBox Grid.Row ="2"
                             x:Name="Nationality"
                             Style="{StaticResource RoundedTextBox}"/>
                </Grid>
            </Grid>

            <!-- Age -->
            <Grid Grid.Column="2" Margin="0,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label VerticalAlignment="Bottom" Content="Age" FontSize="11" FontWeight="Bold" />
                    <TextBox Grid.Row ="2"
                             x:Name="Age"
                             Style="{StaticResource RoundedTextBox}"/>
                </Grid>
            </Grid>
        </Grid>

        <!-- Contact -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            

            <!-- Contact -->
            <Grid Grid.Column="1" Margin="0,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label VerticalAlignment="Bottom" Content="Contact" FontSize="11" FontWeight="Bold" />
                    <TextBox Grid.Row ="2"
                             x:Name="Contact"
                             Style="{StaticResource RoundedTextBox}"/>
                </Grid>
            </Grid>
        </Grid>

        <!-- Radio Buttons -->
        <Grid Grid.Row="4">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <RadioButton Margin="5" x:Name="PersonalAccountRadioButton" Content="Personal Account" GroupName="AccountType" FontSize="11" FontWeight="Bold" IsChecked="True" />
                <RadioButton Margin="5" x:Name="CorporateAccountRadioButton" Content="Corporate Account" GroupName="AccountType" FontSize="11" FontWeight="Bold"  />
            </StackPanel>
        </Grid>

        <!-- Sign Up Button -->
        <Grid Grid.Row="5">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "2*"/>
                <ColumnDefinition Width = "*"/>
                <ColumnDefinition Width = "2*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height = "*"/>
                <RowDefinition Height = "5*"/>
                <RowDefinition Height = "*"/>
            </Grid.RowDefinitions>
            <Button 
                    Content="Sign Up !"
                    Click="signUp"
                    Style="{StaticResource NavButton}"
                    Grid.Column="1"
                    Grid.Row="1"/>
        </Grid>

        <!-- Already Have Account -->




    </Grid>
</Page>
