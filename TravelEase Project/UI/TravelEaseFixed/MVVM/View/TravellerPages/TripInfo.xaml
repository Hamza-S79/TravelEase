<Page x:Class="TravelEaseFixed.MVVM.View.TravellerPages.TripInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelEaseFixed.MVVM.View.TravellerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TripInfo">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "6.85*"/>
            <RowDefinition Height = "1.618*"/>
            <RowDefinition Height = "4.25*"/>

        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "1.618*"/>
                <ColumnDefinition Width = "*"/>
                <ColumnDefinition Width = "*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.ColumnSpan="2" Grid.RowSpan="3">
                <Image Source="{Binding active_image_path}" Stretch="Uniform"/>

            </Border>
            <Button Style="{StaticResource RoundedNavButton}" Content="Go back to List"
                Click="Back"
                Grid.Column="2"
                Margin="15"
                />
        </Grid>

        <ListBox Grid.Row="1" Background="Transparent" ItemsSource="{Binding itineraries}">

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid 
                      Height="60"
                      Width="140"
                    >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width ="*"/>
                            <ColumnDefinition Width ="2*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                            >
                            <Border.Background>
                                <ImageBrush ImageSource="../../../Images/Arrow.png" Stretch="Uniform"/>
                            </Border.Background>
                        </Border>
                        <Button Grid.Column="1"
                            VerticalAlignment="Stretch"
                            Tag="{Binding}"
                            Click="selectItinerary"
                                >
                            <Button.Template>
                                <ControlTemplate>
                                    
                                    <Border
                                         HorizontalAlignment="Stretch"
                                         VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                         Background="{TemplateBinding Background}"
                                         CornerRadius="10"
                                         BorderBrush="{TemplateBinding BorderBrush}"
                                         BorderThickness="1"
                                         
                                         >
                                        <Viewbox Stretch="Uniform">
                                            <TextBlock
                                             Text="{Binding}"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"
                                             FontFamily="Gabriola"
                                             FontSize="15"
                 
                                             Foreground="{TemplateBinding Foreground}"
                                             />
                                        </Viewbox>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource Color2}"/>
                                            <Setter Property="TextBlock.Foreground" Value="White" />
                                            <Setter Property="BorderBrush" Value="White"/>
                                            <Setter Property="Margin" Value="1"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="False">
                                            <Setter Property="Background" Value="#55E6C7C2"/>
                                            <Setter Property="TextBlock.Foreground" Value="Black" />
                                            <Setter Property="BorderBrush" Value="#6A5164"/>
                                            <Setter Property="Margin" Value="3"/>
                                        </Trigger>



                                    </ControlTemplate.Triggers>

                                </ControlTemplate>
                            </Button.Template>
                        </Button>


                    </Grid>

                </DataTemplate>
            </ListBox.ItemTemplate>



        </ListBox>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <TextBlock Grid.Column="0" Grid.Row="0"
                   Foreground="Black" FontFamily="Gabriola" FontSize="40"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="{Binding ann_tripId, StringFormat='Trip# {0}'}"
                   />

            <TextBlock Grid.Column="0" Grid.Row="1"
                   Foreground="Black" FontFamily="Gabriola" FontSize="40"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="{Binding Op_Name}"
                   />
            <TextBlock Grid.Column="0" Grid.Row="2"
                   Foreground="Black" FontFamily="Gabriola" FontSize="40"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="{Binding Op_Id, StringFormat='Operator# {0}'}"
                   />
            <TextBlock Grid.Column="1" Grid.Row="0"
                   Foreground="Black" FontFamily="Gabriola" FontSize="40"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="{Binding bg_date, StringFormat='Begins: {0}'}"
                   />
            <TextBlock Grid.Column="1" Grid.Row="1"
                   Foreground="Black" FontFamily="Gabriola" FontSize="40"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="{Binding ed_date, StringFormat='Ends: {0}'}"
                   />
            <TextBlock Grid.Column="1" Grid.Row="2"
                   Foreground="Black" FontFamily="Gabriola" FontSize="40"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="{Binding price, StringFormat='PKR {0}/-'}"
                   />
            <TextBlock Grid.Column="2" Grid.Row="0"
                   Foreground="Black" FontFamily="Gabriola" FontSize="40"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="{Binding groupsize, StringFormat ='Group of: {0}'}"
                   />



            <Button Grid.Column="2" Grid.Row="2" Style="{StaticResource RoundedNavButton}" Content="BOOK THIS TRIP!" Margin="35,0,35,5"/>



        </Grid>


    </Grid>
</Page>
