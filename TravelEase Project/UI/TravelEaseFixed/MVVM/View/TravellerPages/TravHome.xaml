<Page x:Class="TravelEaseFixed.MVVM.View.TravellerPages.TravHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelEaseFixed.MVVM.View.TravellerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TravHome">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      PanningRatio="0.00001"
                      PanningDeceleration="2000"
                      >
            <ScrollViewer.Resources>
                <Style TargetType="{x:Type ScrollBar}">
                    <Setter Property="Width" Value="1"/>

                </Style>
            </ScrollViewer.Resources>

            <Grid Height="700" Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height ="1*"/>
                    <RowDefinition Height ="5*"/>
                    <RowDefinition Height ="5*"/>


                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>


                    <Border Style="{StaticResource Text Panel Green}" Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>


                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                        Text="Memories"
                        Foreground="White"
                        FontSize="45"
                        Margin="20,2,0,0"
                        FontWeight="DemiBold"
                        FontFamily="Gabriola"
                        VerticalAlignment="Top" HorizontalAlignment="left" 
    
                        />
                            <TextBlock Grid.Row="1"
                        Text="made"
                        Foreground="White"
                        FontSize="45"
                        Margin="20,2,0,0"
                        FontWeight="DemiBold"
                        FontFamily="Gabriola"
                        VerticalAlignment="Top" HorizontalAlignment="left" 
                        
                        />
                            <TextBlock Grid.Row="2"
                        Text="your way"
                        Foreground="White"
                        FontSize="45"
                        Margin="20,2,0,0"
                        FontWeight="DemiBold"
                        FontFamily="Gabriola"
                        VerticalAlignment="Top" HorizontalAlignment="left" 
    
                        />
                        </Grid>
                    </Border>


                    <Border Style="{StaticResource Text Panel Blue}" Grid.Column="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>


                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                        Text="Many"
                        Foreground="White"
                        FontSize="45"
                        Margin="20,2,0,0"
                        FontWeight="DemiBold"
                        FontFamily="Gabriola"
                        VerticalAlignment="Top" HorizontalAlignment="left" 
                        
                        />
                            <TextBlock Grid.Row="1"
                        Text="Adventures"
                        Foreground="White"
                        FontSize="45"
                        Margin="20,2,0,0"
                        FontWeight="DemiBold"
                        FontFamily="Gabriola"
                        VerticalAlignment="Top" HorizontalAlignment="left" 
                        
                        />
                            <TextBlock Grid.Row="2"
                        Text="Wait!"
                        Foreground="White"
                        FontSize="45"
                        Margin="20,2,0,0"
                        FontWeight="DemiBold"
                        FontFamily="Gabriola"
                        VerticalAlignment="Top" HorizontalAlignment="left" 
                        
                        />
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource Text Panel Orange}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>


                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                        Text="Try Our"
                        Foreground="White"
                        FontSize="45"
                        Margin="20,2,0,0"
                        FontWeight="DemiBold"
                        FontFamily="Gabriola"
                        VerticalAlignment="Top" HorizontalAlignment="left" 
    
                        />
                            <TextBlock Grid.Row="1"
                        Text="Featured"
                        Foreground="White"
                        FontSize="45"
                        Margin="20,2,0,0"
                        FontWeight="DemiBold"
                        FontFamily="Gabriola"
                        VerticalAlignment="Top" HorizontalAlignment="left" 
                        
                        />
                            <TextBlock Grid.Row="2"
                        Text="Trips"
                        Foreground="White"
                        FontSize="45"
                        Margin="20,2,0,0"
                        FontWeight="DemiBold"
                        FontFamily="Gabriola"
                        VerticalAlignment="Top" HorizontalAlignment="left" 
    
                        />
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Row="1">

                </Grid>

                <Grid Grid.Row="2">

                </Grid>

                <Grid Grid.Row="3">

                </Grid>



                <TextBlock Text="B" Grid.Row="1" FontSize="20"/>
                <TextBlock Text="C" Grid.Row="2" FontSize="20"/>
                <TextBlock Text="D" Grid.Row="3" FontSize="20"/>

                <ListBox
                Background="Transparent"
                HorizontalContentAlignment="Center"
                Grid.Row="2" Grid.RowSpan="2" ItemsSource="{Binding List_TripCards}"
                ScrollViewer.PanningRatio="0.0001"
                ScrollViewer.PanningDeceleration="2000"
                >
                    <ListBox.ItemTemplate>
                        <DataTemplate >
                            <Grid Width="600" Height="200" Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2.618*"/>
                                    <ColumnDefinition Width="1.618*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="1.618*"/>
                                    <ColumnDefinition Width="2.618*"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <Border Grid.RowSpan="5" Grid.ColumnSpan ="3" Grid.Column="1"
                           Background="#55E6C7C2">
                                </Border>

                                <Border Grid.RowSpan="3"
                           Background="Gray"
                           CornerRadius="80,0,0,0">
                                    <Border CornerRadius="80,0,0,0">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding Image_path1}"/>
                                        </Border.Background>
                                    </Border>

                                </Border>

                                <Border Grid.RowSpan="3" Grid.Column="4"
                           Background="Gray"
                           CornerRadius="0,80,0,0"
                           >
                                    <Border CornerRadius="0,80,0,0">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding Image_path2}"/>
                                        </Border.Background>
                                    </Border>
                                </Border>

                                <Border Grid.Row="3" Grid.RowSpan="2"
                           Background="#5555ff55"
                           CornerRadius="0,0,0,60"
                           BorderBrush="#55aa55"
                           BorderThickness="1"
                           >
                                </Border>
                                <Border Grid.Row="3" Grid.Column="4" Grid.RowSpan="2"
                           Background ="#55FF8500"
                           CornerRadius="0,0,60,0"
                           BorderBrush="#cc8500"
                           BorderThickness="1"
                           >
                                </Border>

                                <Border Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="1">

                                </Border>

                                <TextBlock Grid.Column="1" Grid.Row="3"
                              Text="{Binding Start_loc}"
                              FontFamily="Gabriola"
                              FontSize="30"
                              HorizontalAlignment="Center"/>

                                <TextBlock Grid.Column="3" Grid.Row="3"
                              Text="{Binding End_loc}"
                              FontFamily="Gabriola"
                              FontSize="30"
                              HorizontalAlignment="Center"/>

                                <TextBlock Grid.Column="1" Grid.Row="4"
                              Text="{Binding Beginning_Date}"
                              FontFamily="Gabriola"
                              FontSize="25"
                              HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Grid.Row="4"
                              Text="{Binding End_date}"
                              FontFamily="Gabriola"
                              FontSize="25"
                              HorizontalAlignment="Center"/>

                                <Button Grid.Row="4" Grid.Column="2"
>
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Border
                                    HorizontalAlignment="Left"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    >
                                                <TextBlock
                                        Text="Trip info"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        FontFamily="Gabriola"
                                        FontSize="20"
            
                                        Foreground="{TemplateBinding Foreground}"
                                        />

                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource Color2}"/>
                                                    <Setter Property="TextBlock.Foreground" Value="White" />
                                                    <Setter Property="BorderBrush" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="False">
                                                    <Setter Property="Background" Value="#5588ddff"/>
                                                    <Setter Property="TextBlock.Foreground" Value="Black" />
                                                    <Setter Property="BorderBrush" Value="#8888ff"/>
                                                </Trigger>



                                            </ControlTemplate.Triggers>

                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>



            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
