<Window x:Class="TravelEaseVS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelEaseVS"
        mc:Ignorable="d"
        Background="#FAF0E6"
        
        Title="MainWindow" Height="450" Width="800">

    <Border>
        <Grid Background="Transparent" x:Name="grid">
            <Grid.ColumnDefinitions>


                <ColumnDefinition Width="1.61*"/>


                <ColumnDefinition Width="4.23*">
                </ColumnDefinition>
                <ColumnDefinition Width="1*">
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>

                <RowDefinition Height="1*">
                </RowDefinition>


                <RowDefinition Height="4.235*">
                </RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.ColumnSpan="3" Background="{StaticResource Color1}">
            </Border>
                 
                       

            <Grid Grid.Row="1" Background="{StaticResource Color1}">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>


                </Grid.RowDefinitions>

               

                    <Button Style="{StaticResource NavButton}" Grid.Row="0" Content="Home" />
                <Button Style="{StaticResource NavButton}" Grid.Row="1" Content="Active Bookings"/>
                <Button Style="{StaticResource NavButton}" Grid.Row="2" Content="Active Trips"/>
                <Button Style="{StaticResource NavButton}" Grid.Row="3" Content="My Travel Book"/>





            </Grid>


        </Grid>

    </Border>

</Window>
