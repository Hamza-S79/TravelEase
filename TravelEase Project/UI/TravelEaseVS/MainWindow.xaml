<Window x:Class="TravelEaseVS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelEaseVS"
        xmlns:viewModel ="clr-namespace:TravelEaseVS.MVVM.ViewModel"
        mc:Ignorable="d"
        Background="#FAF0E6"
        
        Title="MainWindow" Height="740" Width="1300">

    <Window.DataContext>
        <viewModel:ViewHandler/>
    </Window.DataContext>

    <Border>
        <Grid Background="Transparent"><!--Main Grid-->
            
            <Grid.ColumnDefinitions>


                <ColumnDefinition Width="1.61*"/>

                <ColumnDefinition Width="6.84*"/>

                <ColumnDefinition Width="1*"/>

            </Grid.ColumnDefinitions>


            <Grid.RowDefinitions>

                <RowDefinition Height="1*"/>
                <RowDefinition Height="6.84*"/>

            </Grid.RowDefinitions>

            <Border 
                Grid.Row="0" 
                Grid.ColumnSpan="3" 
                Background="{StaticResource Color1}"
                BorderBrush="{StaticResource Color1}"
                >
            </Border>
            





            <Grid Grid.Row="1" Background="{StaticResource Color1}">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>


                </Grid.RowDefinitions>

               

                <Button Style="{StaticResource NavButton}" Grid.Row="0" Content="Home" Command="{Binding HMVCommand}"/>
                <Button Style="{StaticResource NavButton}" Grid.Row="1" Content="Announced Trips" Command="{Binding ATVCommand}"/>
                <Button Style="{StaticResource NavButton}" Grid.Row="2" Content="Active Bookings"/>
                <Button Style="{StaticResource NavButton}" Grid.Row="3" Content="Active Trips"/>
                <Button Style="{StaticResource NavButton}" Grid.Row="4" Content="My Travel Book"/>





            </Grid>

            <Grid Grid.Row="0" Grid.Column="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>


                </Grid.ColumnDefinitions>

                <Grid Grid.Column="2">

                    <Grid.RowDefinitions>
                        <RowDefinition Height ="*"/>
                        <RowDefinition Height ="2*"/>
                        <RowDefinition Height ="*"/>

                    </Grid.RowDefinitions>
                    

                    <Border Background="#F1F1F1"
                        CornerRadius="18"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        Margin="0,0,26,0"
                            Grid.Row="1">

                        <TextBox  
                          Margin="0,0,26,0"
                          x:Name="SearchBox"
                          Background="Transparent"
                          BorderThickness="0"
                          VerticalContentAlignment="Center"
                          Padding="10,0,35,0"
                          FontSize="14"
                          Text="Search..."
                          GotFocus="SearchBox_GotFocus"
                          LostFocus="SearchBox_LostFocus"
                          Foreground="Gray" TextChanged="SearchBox_TextChanged"/>

                    </Border>
                </Grid>
            </Grid>
            
            <ContentControl Grid.Column="1" Grid.Row="1"
                            Margin="10"
                            Content="{Binding MyView}"
                            />



        </Grid>

        


    </Border>
        

</Window>
