<Page x:Class="TravelEaseVS.MVVM.View.Admin_Pages.OperatorList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelEaseVS.MVVM.View.Admin_Pages"
      xmlns:viewModel="clr-namespace:TravelEaseVS.MVVM.ViewModel"
      
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OperatorList">

    <Page.DataContext>
        <viewModel:AdminOperatorModel/>
    </Page.DataContext>


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height = "*"/>
            <RowDefinition Height = "10*"/>
        </Grid.RowDefinitions>

        
            <Button 
                    Content="OPERATOR LIST PAGE"
                    Click="NavToOperInfo"/>


        <ListBox
                ItemsSource="{Binding List_OpCards}"
                Grid.Row="1"
                Background="Transparent"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                >
            <ListBox.ItemTemplate>
                <DataTemplate >
                    <Grid  Background="#55E6C7C2" Width="600" Height="200" Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.9*"/>
                            <ColumnDefinition Width="2.618*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border Grid.RowSpan="5" Grid.ColumnSpan ="3" Grid.Column="1"
                                    Background="#55E6C7C2">
                        </Border>

                        <Ellipse Grid.RowSpan="3"
                                     Width="100" Height="100"
                                     Margin="10"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding ProfileImage}" />
                            </Ellipse.Fill>
                        </Ellipse>

                        <Border Grid.Row="3" Grid.RowSpan="2"
                                    Background="#5555ff55"
                                    CornerRadius="0,0,0,0"
                                    BorderBrush="#55aa55"
                                    BorderThickness="1"
                                    >
                        </Border>

                        <TextBlock Grid.Column="0" Grid.Row="3"
                                Text="{Binding Start_loc}"
                                FontFamily="Gabriola"
                                FontSize="30"
                                HorizontalAlignment="Center"/>

                        <TextBlock Grid.Column="0" Grid.Row="3"
                                  Text="{Binding Name}"
                                  FontFamily="Gabriola"
                                  FontSize="30"
                                  HorizontalAlignment="Center"/>


                        <TextBlock Grid.Column="1" Grid.Row="3"
                                       Text="{Binding Email}"
                                       FontFamily="Gabriola"
                                       FontSize="30"
                                       HorizontalAlignment="Center"/>

                        <TextBlock Grid.Column="0" Grid.Row="4"
                                       Text="{Binding Contact}"
                                       FontFamily="Gabriola"
                                       FontSize="30"
                                       HorizontalAlignment="Center"/>

                        <TextBlock Grid.Column="1" Grid.Row="4"
                                       Text="{Binding Age}"
                                       FontFamily="Gabriola"
                                       FontSize="25"   
                                       HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Grid.Row="0"
                                       Text="{Binding JoinDate}"
                                       FontFamily="Gabriola"
                                       FontSize="25"
                                       HorizontalAlignment="Center"/>

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>



    </Grid>
</Page>
