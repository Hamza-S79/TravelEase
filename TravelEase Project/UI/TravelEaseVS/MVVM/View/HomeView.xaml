<UserControl x:Class="TravelEaseVS.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TravelEaseVS.MVVM.View"
             mc:Ignorable="d" Background="Linen"
             d:DesignHeight="450" d:DesignWidth="800">
   
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      PanningRatio="0.00001"
                      PanningDeceleration="2000"
                      >
        <ScrollViewer.Resources>
            <Style TargetType="{x:Type ScrollBar}">
                <Setter Property="Width" Value="1"/>

            </Style>
        </ScrollViewer.Resources>
            
        <Grid Height="900">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>


            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>

                <Border Style="{StaticResource Text Panel Purple}" Grid.Column="1">
                    <TextBlock
                        Text="Make memories &#x0a; your way"
                        Foreground="White"
                        FontSize="38"
                        Margin="8,2,0,0"
                        FontWeight="DemiBold"
                        FontFamily="Gabriola"
                        VerticalAlignment="Top" HorizontalAlignment="left" 
                        
                        />

                </Border>


                <Border Style="{StaticResource Text Panel Orange}" Grid.Column="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>


                        </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                        Text="Many"
                        Foreground="White"
                        FontSize="45"
                        Margin="20,2,0,0"
                        FontWeight="DemiBold"
                        FontFamily="Gabriola"
                        VerticalAlignment="Top" HorizontalAlignment="left" 
                        
                        />
                        <TextBlock Grid.Row="1"
                        Text="Adventures"
                        Foreground="White"
                        FontSize="45"
                        Margin="20,2,0,0"
                        FontWeight="DemiBold"
                        FontFamily="Gabriola"
                        VerticalAlignment="Top" HorizontalAlignment="left" 
                        
                        />
                        <TextBlock Grid.Row="2"
                        Text="Wait!"
                        Foreground="White"
                        FontSize="45"
                        Margin="20,2,0,0"
                        FontWeight="DemiBold"
                        FontFamily="Gabriola"
                        VerticalAlignment="Top" HorizontalAlignment="left" 
                        
                        />
                    </Grid>
                </Border>

                <Grid Grid.Row="0" >

                    <Rectangle Margin="10" RadiusX="30" RadiusY="30">
                        <Rectangle.Fill>
                            <LinearGradientBrush
                                
                              >
                                <GradientStop Color="{StaticResource Color1a}" Offset="0.0"/>
                                <GradientStop Color="{StaticResource Color1b}" Offset="1"/>

                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <Border>
                    <TextBlock
                        Text="Check out our&#x0a;Featured Trips"
                        Foreground="White"
                        FontSize="45"
                        Margin="18,10,0,0"
                        FontWeight="Demibold"
                        FontFamily="Gabriola"
                        VerticalAlignment="Top" HorizontalAlignment="left" 
                        
                        />
                    </Border>
                </Grid>
            </Grid>
            
            <Grid Grid.Row="1">

            </Grid>
            
            <Grid Grid.Row="2">
                
            </Grid>
            
            <Grid Grid.Row="3">
                
            </Grid>


            <TextBlock Text="A" Grid.Row="0" FontSize="20"/>
            <TextBlock Text="B" Grid.Row="1" FontSize="20"/>
            <TextBlock Text="C" Grid.Row="2" FontSize="20"/>
            <TextBlock Text="D" Grid.Row="3" FontSize="20"/>


        </Grid>
        </ScrollViewer>



   
</UserControl>
